<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">


            <TextView
                android:id="@+id/tvAdminStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_status_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="@string/status_pending"
                android:textColor="#2d58a9"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="#eee" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Customer:"
                android:textColor="#777"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAdminCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="#333" />
        </LinearLayout>

        <!-- PHONE NUMBER (NEW) -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Phone:" android:textColor="#777" android:textStyle="bold" />
            <TextView android:id="@+id/tvAdminCustomerPhone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+63 912 345 6789" android:textColor="#2d58a9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/label_date"
                android:textColor="#777"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAdminAppointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 25, 2026 - 09:00 AM"
                android:textColor="#333" />
        </LinearLayout>
        <!-- PAYMENT METHOD (NEW) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Payment Type:"
                android:textColor="#777"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAdminPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Wallet"
                android:textColor="#2d58a9"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- SERVICES (MOVED HERE) -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Services:" android:textColor="#777" android:textStyle="bold" />
            <TextView android:id="@+id/tvAdminServices" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wash and Fold" android:textColor="#D32F2F" android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Proof of Payment Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Proof of Payment:"
            android:textColor="#777"
            android:textSize="12sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/ivProofOfPayment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:background="#eee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Update Status:"
            android:textColor="#333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetPending"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="Pending"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                app:strokeColor="#ccc" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetInProgress"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="In Progress"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                app:strokeColor="#ccc" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetCompleted"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#4CAF50"
                android:text="Completed"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetCancelled"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#F44336"
                android:text="Cancelled"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="8dp" />

        </GridLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
