<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient">

    <!-- Header Decorative Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:alpha="0.6" />

    <!-- Bottom Decorative Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:rotation="180"
        android:alpha="0.4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="Book Appointment"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:shadowColor="#333"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Schedule your laundry service"
                android:textColor="#eee"
                android:textSize="14sp" />

            <!-- BOOK APPOINTMENT CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Book Appointment"
                        android:textColor="#333"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- SERVICES -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Select Service(s)"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:useDefaultMargins="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWashFold"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Wash and Fold"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="12sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDryCleaning"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Dry Cleaning"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="12sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnIroning"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Ironing"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="12sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExpress"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Express"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="12sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </GridLayout>

                    <!-- MACHINE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="10dp"
                        android:text="Select Machine"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:useDefaultMargins="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine1"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 1"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine2"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 2"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine3"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 3"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine4"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 4"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine5"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 5"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMachine6"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="Machine 6"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </GridLayout>

                    <!-- DATE & TIME -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="10dp"
                        android:text="Date &amp; Time"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Select Time"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:columnCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:useDefaultMargins="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime9am"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="9:00 AM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime11am"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="11:00 AM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime1pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="1:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime3pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="3:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime5pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="5:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime7pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="7:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />
                    </GridLayout>

                    <!-- DELIVERY -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMethodDropOff"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Drop Off"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMethodPickup"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Pickup"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- PAYMENT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Payment Method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPaymentCash"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Cash"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPaymentEWallet"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="E-Wallet"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- BOOK BUTTON -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBookAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="32dp"
                        android:backgroundTint="#2d58a9"
                        android:text="Book Appointment"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:elevation="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>