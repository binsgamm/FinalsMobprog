                                    android:textColor="#666"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvServicesTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚±0"
                                    android:textColor="#333"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
