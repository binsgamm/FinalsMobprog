<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient">

    <!-- Header Decorative Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:alpha="0.6" />

    <!-- Bottom Decorative Background (Using it more) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:rotation="180"
        android:alpha="0.4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="@string/header_title"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:shadowColor="#333"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/header_subtitle"
                android:textColor="#eee"
                android:textSize="14sp" />

            <!-- BOOK APPOINTMENT CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/book_appointment"
                        android:textColor="#333"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- SERVICES -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/select_service"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:gravity="start|center_vertical"
                            android:padding="12dp"
                            android:text="@string/service_wash_fold"
                            android:textAllCaps="false"
                            android:textColor="#333"
                            android:textSize="11sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:gravity="start|center_vertical"
                            android:padding="12dp"
                            android:text="@string/service_dry_cleaning"
                            android:textAllCaps="false"
                            android:textColor="#333"
                            android:textSize="11sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:gravity="start|center_vertical"
                            android:padding="12dp"
                            android:text="@string/service_ironing"
                            android:textAllCaps="false"
                            android:textColor="#333"
                            android:textSize="11sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:gravity="start|center_vertical"
                            android:padding="12dp"
                            android:text="@string/service_express"
                            android:textAllCaps="false"
                            android:textColor="#333"
                            android:textSize="11sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />
                    </GridLayout>

                    <!-- MACHINE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/select_machine"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_1"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_2"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_3"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_4"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_5"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="6dp"
                            android:text="@string/machine_6"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />
                    </GridLayout>

                    <!-- DATE & TIME -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/date_time"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/select_time"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:columnCount="3">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_9am"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_11am"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_1pm"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_3pm"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_5pm"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="4dp"
                            android:text="@string/time_7pm"
                            android:textColor="#2d58a9"
                            app:cornerRadius="12dp" />
                    </GridLayout>

                    <!-- DELIVERY -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:text="@string/method_cod"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:text="@string/method_pickup"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />
                    </LinearLayout>

                    <!-- PAYMENT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/payment_method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:text="@string/payment_cash"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:text="@string/payment_ewallet"
                            android:textColor="#333"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ccc" />
                    </LinearLayout>

                    <!-- BOOK BUTTON -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="40dp"
                        android:backgroundTint="#2d58a9"
                        android:text="@string/btn_book_appointment"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:elevation="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
