<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient">

    <!-- Header Decorative Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:alpha="0.6" />

    <!-- Bottom Decorative Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_header"
        android:rotation="180"
        android:alpha="0.4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="Book Appointment"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:shadowColor="#333"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Schedule your laundry service"
                android:textColor="#eee"
                android:textSize="14sp" />

            <!-- BOOK APPOINTMENT CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Book Appointment"
                        android:textColor="#333"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- SERVICES (Express removed - only 3 services) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Select Service(s)"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWashFold"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:minHeight="56dp"
                            android:checkable="true"
                            android:text="ðŸ§º Wash and Fold - â‚±50"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="14sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDryCleaning"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:minHeight="56dp"
                            android:checkable="true"
                            android:text="ðŸ‘” Dry Cleaning - â‚±80"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="14sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnIroning"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="56dp"
                            android:checkable="true"
                            android:text="ðŸ‘• Ironing - â‚±40"
                            android:textAllCaps="false"
                            android:textColor="@color/service_button_text"
                            android:textSize="14sp"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tip: You can select multiple services"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <!-- DATE & TIME -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:text="Date &amp; Time"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <!-- Date Selection Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:textColor="#666"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSelectDate"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="56dp"
                                android:text="ðŸ“… Choose Date"
                                android:textColor="#2d58a9"
                                android:textSize="16sp"
                                app:cornerRadius="8dp"
                                app:strokeColor="#2d58a9"
                                app:strokeWidth="2dp"
                                app:icon="@android:drawable/ic_menu_my_calendar"
                                app:iconTint="#2d58a9" />

                            <TextView
                                android:id="@+id/tvSelectedDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No date selected"
                                android:textColor="#999"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Select Time (2.5-hour service intervals)"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:columnCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:useDefaultMargins="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime9am"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="9:00 AM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime1130am"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="11:30 AM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime2pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="2:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime430pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="4:30 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTime7pm"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_margin="4dp"
                            android:minHeight="48dp"
                            android:checkable="true"
                            android:text="7:00 PM"
                            android:textColor="@color/time_button_text"
                            app:backgroundTint="@color/time_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/time_button_stroke"
                            app:strokeWidth="2dp" />
                    </GridLayout>

                    <!-- INFO NOTE ABOUT MACHINE ASSIGNMENT -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#E3F2FD"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â„¹ï¸"
                                android:textSize="20sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Machine will be assigned by staff when you arrive at the laundry shop."
                                android:textColor="#1565C0"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- DETERGENT ADD-ON -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detergent"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupDetergent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDetergentOwn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Own"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDetergentAddOn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Add-Ons"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- BRAND SELECTION (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutBrandSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Select Brand (â‚±30 each)"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroupBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBrandX"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="48dp"
                                android:text="Brand X"
                                android:textSize="12sp"
                                android:textColor="@color/service_button_text"
                                app:backgroundTint="@color/service_button_background"
                                app:cornerRadius="12dp"
                                app:strokeColor="@color/service_button_stroke"
                                app:strokeWidth="2dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBrandY"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="48dp"
                                android:text="Brand Y"
                                android:textSize="12sp"
                                android:textColor="@color/service_button_text"
                                app:backgroundTint="@color/service_button_background"
                                app:cornerRadius="12dp"
                                app:strokeColor="@color/service_button_stroke"
                                app:strokeWidth="2dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBrandZ"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="48dp"
                                android:text="Brand Z"
                                android:textSize="12sp"
                                android:textColor="@color/service_button_text"
                                app:backgroundTint="@color/service_button_background"
                                app:cornerRadius="12dp"
                                app:strokeColor="@color/service_button_stroke"
                                app:strokeWidth="2dp" />
                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <!-- QUANTITY SELECTION -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Quantity"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnQuantityMinus"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="-"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:cornerRadius="24dp"
                                app:strokeWidth="2dp" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#333"
                                android:gravity="center" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnQuantityPlus"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="+"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:cornerRadius="24dp"
                                app:strokeWidth="2dp" />
                        </LinearLayout>

                        <!-- TOTAL DISPLAY -->
                        <TextView
                            android:id="@+id/tvDetergentTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total: â‚±30"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2d58a9"
                            android:gravity="end"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>

                    <!-- DELIVERY -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Delivery Method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMethodDropOff"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Drop Off"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMethodPickup"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Pickup"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- PAYMENT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Payment Method"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPaymentCash"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Cash"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPaymentEWallet"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="E-Wallet"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/service_button_stroke"
                            app:strokeWidth="2dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- E-WALLET PAYMENT PROOF (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutPaymentProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Payment Proof"
                            android:textColor="#D32F2F"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please upload screenshot of payment (GCash, Maya, etc.)"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUploadProof"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“· Choose Image"
                            android:textColor="@color/service_button_text"
                            app:backgroundTint="@color/service_button_background"
                            app:cornerRadius="12dp"
                            app:strokeColor="#2d58a9"
                            app:strokeWidth="2dp"
                            app:icon="@android:drawable/ic_menu_gallery"
                            app:iconTint="#2d58a9" />

                        <!-- Image Preview -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImagePreview"
                            android:layout_width="match_parent"
